{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true
    },
    "cSpell.ignoreWords": [
        "Viewports",
        "aruns",
        "callout",
        "commitlint",
        "unoptimized"
    ],
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    }
}